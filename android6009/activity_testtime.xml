<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TesttimeActivity">

    <TextView
        android:id="@+id/tv_Testtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Testtime Activity 입니다"
        android:textSize="24sp" />

    <TimePicker
        android:id="@+id/tp_MyTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="clock">

    </TimePicker>

    <Button
        android:id="@+id/bt_ReadTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ReadTime" />

    <TextView
        android:id="@+id/tv_ReadTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time="
        android:textSize="24sp" />

    <Button
        android:id="@+id/bt_TimeToMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TimeToMian" />

</LinearLayout>